                  <Button fx:id="id_estadisticas" mnemonicParsing="false" onAction="#estadisticas" prefWidth="250.0" text="Estadísticas">
                     <VBox.margin>
                        <Insets bottom="35.0" />
                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
